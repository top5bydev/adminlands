{% extends 'admin.html' %}
{% block title %}{{ pageTitle }}{% endblock %}
{% block content %}
    <form id="form-change-password" role="form" method="POST" action="{{ route('admin.profile.store') }}" novalidate
          class="form-horizontal">
        <div class="col-md-9">
            {{ csrf_field() }}

            <label for="password" class="col-sm-4 control-label">Новый пароль</label>
            <div class="col-sm-8">
                <div class="form-group">
                    <input type="password" class="form-control" id="password" name="password" placeholder="Новый пароль">
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-6">
                <button type="submit" class="btn btn-danger">Сохранить</button>
            </div>
        </div>
    </form>
{% endblock %}